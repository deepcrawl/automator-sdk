{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["es2021", "esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@common/*": ["_common/*"],
      "@sdk/*": ["sdk/*"],
      "@tests/*": ["__tests__/*"],
      "@src/*": ["*"]
    },
    "plugins": [{ "transform": "typescript-transform-paths" }]
  },
  "include": ["src"]
}
