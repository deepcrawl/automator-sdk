{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2019", "esnext"],
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "baseUrl": "./src",
    "rootDir": "./src",
    "paths": {
      "@common/*": ["_common/*"],
      "@sdk/*": ["sdk/*"],
      "@src/*": ["*"]
    },
    "plugins": [
      {
        "transform": "@zerollup/ts-transform-paths",
        "exclude": ["*"]
      }
    ]
  },
  "include": ["src"]
}
